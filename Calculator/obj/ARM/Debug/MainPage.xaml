<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="325">

    <Grid  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--Numbers-->
        <Button x:ConnectionId='1' x:Name="ButtonZero" Tag="number" Grid.Column="1" Grid.Row="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="0"                     ></Button>
        <Button x:ConnectionId='2' x:Name="ButtonOne" Tag="number" Grid.Column="0"  Grid.Row="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="1"                     ></Button>
        <Button x:ConnectionId='3' x:Name="ButtonTwo" Tag="number" Grid.Column="1"  Grid.Row="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="2"                     ></Button>
        <Button x:ConnectionId='4' x:Name="ButtonThree" Tag="number" Grid.Column="2"  Grid.Row="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="3"                     ></Button>
        <Button x:ConnectionId='5' x:Name="ButtonFour" Tag="number" Grid.Column="0"  Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="4"                     ></Button>
        <Button x:ConnectionId='6' x:Name="ButtonFive" Tag="number" Grid.Column="1" Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="5"                     ></Button>
        <Button x:ConnectionId='7' x:Name="ButtonSix" Tag="number" Grid.Column="2" Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="6"                     ></Button>
        <Button x:ConnectionId='8' x:Name="ButtonSeven" Tag="number" Grid.Column="0"  Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="7"                     ></Button>
        <Button x:ConnectionId='9' x:Name="ButtonEight" Tag="number" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="8"                     ></Button>
        <Button x:ConnectionId='10' x:Name="ButtonNine" Tag="number" Grid.Column="2" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="9"                     ></Button>
        <!--Operators-->
        <Button x:ConnectionId='11' x:Name="ButtonAdd" Tag="operator" Grid.Column="3" Grid.Row="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="+"                     ></Button>
        <Button x:ConnectionId='12' x:Name="ButtonMultiply" Tag="operator" Grid.Column="3" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="*"                     ></Button>
        <Button x:ConnectionId='13' x:Name="ButtonSubtract" Tag="operator" Grid.Column="3" Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="-"                     ></Button>
        <Button x:ConnectionId='14' x:Name="ButtonDivide" Tag="operator" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="/"                     ></Button>
        <Button x:ConnectionId='15' x:Name="ButtonEquals" Tag="operator" Grid.Column="3" Grid.Row="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="="                     ></Button>
        <Button x:ConnectionId='16' x:Name="ButtonClear" Tag="utitity" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="C"                     ></Button>
        <Button x:ConnectionId='17' x:Name="ButtonBack" Tag="utitity" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Back"                     ></Button>
        <Button x:ConnectionId='18' x:Name="ButtonNegate" Tag="utitity" Grid.Column="0" Grid.Row="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Negate"                     ></Button>
        <Button x:ConnectionId='19' x:Name="ButtonClearEntry" Tag="utitity" Grid.Column="0"  Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="CE"                     ></Button>
        <Button x:ConnectionId='20' x:Name="ButtonDecimal" Tag="number" Grid.Column="2" Grid.Row="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="."                     ></Button>
        <Button Grid.Column="0" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content=""></Button>
        <Button Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content=""></Button>
        <Button Grid.Column="2" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content=""></Button>
        <Button Grid.Column="3" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content=""></Button>
        <TextBox x:ConnectionId='21' x:Name="Display" Grid.Column="0" Grid.Row ="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="4" Grid.RowSpan="2" FontSize="48" FontWeight="Bold" IsReadOnly="True" BorderThickness="0" TextAlignment="Right"></TextBox>
        <TextBox x:ConnectionId='22' x:Name="OperationsDisplay" Grid.Column="0" Grid.Row ="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="4" Grid.RowSpan="2" FontSize="26.667" FontWeight="Bold" IsReadOnly="True" BorderThickness="0" TextAlignment="Right"></TextBox>
    </Grid>
</Page>

    

